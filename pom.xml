	<properties>
		<java.version>1.7</java.version>
		<servlet-api.version>3.1.0</servlet-api.version>
		<mysql-connector-version>5.1.39</mysql-connector-version>
		<spring-framework-version>4.1.4.RELEASE</spring-framework-version>
